@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <link rel="stylesheet" href="~/CSS/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  <title>Gadget Groove</title>
</head>
<body>
  <nav>
    <h1>Gadget Groove</h1>
    <div class="buscar">
      <form action="#" method="get" class="search-form">
        <input type="text" placeholder="Digite o nome do produto..." name="search" id="search" class="search-input">
        <button type="submit" class="search-button">Buscar</button>
      </form>
    </div>
    <div class="areaDeCadastro">
      <a href="~/Site/index.cshtml">Voltar para o inicio</a>
    </div>
  </nav>
  <h2>Criar Conta</h2>
  <div>
    <form class="usuario-form" method="post" action="~/Site/cadastra_usuario.cshtml">
      <div>
        <input placeholder="Nome*"  type="text" name="nome" />
        <input placeholder="CPF*" type="text" name="CPF" required>
      </div>
      <div>
        <input placeholder="Senha*" type="password" name="senha" required>
        <input placeholder="Email*" type="email" name="email">
      </div>
      
      <input type="submit" value="Enviar">
    </form>
  </div>
</body>
</html>